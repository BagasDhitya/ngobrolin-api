{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true, // penting untuk mengabaikan cek type yang tidak ada
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ]
}